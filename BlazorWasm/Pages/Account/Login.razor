@page "/"
@layout BeforeLoginLayout

@if (!IsAuthenticating)
{
    <div class="login-container">
        <div class="main-wrapper">
            <div class="row m-0 main-login-panel">
                <div class="right-panel">
                    <div class="form-wrapper">
                        <div class="my-4 text-center">
                            <h2 class="sign-in-heading">Omega Web Sign In</h2>
                        </div>
                        <div id="divSignIn">
                            <form @onsubmit="LoginAsync">
                                <div class="error-message">@ErrorMessage</div>

                                <div class="form-group mt-3">
                                    <label class="col-form-label input-label">
                                        Email address or Username
                                    </label>
                                    <input type="text" @bind="username" class="forum-text-box" placeholder="Email Address or Username" autocomplete="off">
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label input-label">
                                        Password
                                    </label>
                                    <input type="password" @bind="password" class="forum-text-box" placeholder="Password" autocomplete="off">
                                </div>

                                <button type="submit" style="border: 0" class="btn-primary w-100 mt-4 d-block p-3">Sign In →</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-around align-items-center ">
        <img src="assets/spinner.svg" />
    </div>
}


